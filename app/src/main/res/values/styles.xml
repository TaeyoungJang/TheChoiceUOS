<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name = "MenuTexts">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name = "SubMenuTexts">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name = "Category">
        <item name = "android:fontFamily">sans-serif-bold</item>
        <item name = "android:layout_width">50sp</item>
        <item name = "android:layout_height">50sp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">#000000</item>
    </style>

    <style name = "EditTexts">
        <item name = "android:background">@drawable/rounded_corner</item>
        <item name = "android:textColor">#000000</item>
        <item name = "android:paddingLeft">10sp</item>
    </style>
</resources>
